<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
<servlet>
<servlet-name>CalculatorServlet</servlet-name>
<servlet-class>CalculatorServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>CalculatorServlet</servlet-name>
<url-pattern>/CalculatorServlet</url-pattern>
</servlet-mapping>
 <welcome-file-list>
        <welcome-file>Pricing.html</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>defaultNoItems</param-name>
        <param-value>0</param-value>
    </context-param>

    <context-param>
        <param-name>defaultPrice</param-name>
        <param-value>0.0</param-value>
    </context-param>

    <context-param>
        <param-name>defaultTaxRate</param-name>
        <param-value>13.0</param-value>
    </context-param>

    <context-param>
        <param-name>defaultProvince</param-name>
        <param-value>Ontario</param-value>
    </context-param>
</web-app>